<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homework_1_me"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/showText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black"
        android:layout_weight="3"
        android:textColor="@color/white"
        android:text="0"
        android:gravity="right | bottom"
        android:padding="5dp"
        android:textSize="60dp"/>

    <LinearLayout
        android:layout_weight="8"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/one"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/number_bg_me"
                android:text="1"
                android:textSize="60dp"
                android:layout_margin="2dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/two"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/number_bg_me"
                android:text="2"
                android:textSize="60dp"
                android:layout_margin="2dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/three"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/number_bg_me"
                android:text="3"
                android:textSize="60dp"
                android:layout_margin="2dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/cancle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/number_bg_me"
                android:text="CA"
                android:textSize="60dp"
                android:layout_margin="2dp"
                android:gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/four"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/number_bg_me"
                android:text="4"
                android:textSize="60dp"
                android:layout_margin="2dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/five"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/number_bg_me"
                android:text="5"
                android:textSize="60dp"
                android:layout_margin="2dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/six"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/number_bg_me"
                android:text="6"
                android:textSize="60dp"
                android:layout_margin="2dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/plus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/number_bg_me"
                android:text="+"
                android:textSize="60dp"
                android:layout_margin="2dp"
                android:gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/seven"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/number_bg_me"
                android:text="7"
                android:textSize="60dp"
                android:layout_margin="2dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/eight"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/number_bg_me"
                android:text="8"
                android:textSize="60dp"
                android:layout_margin="2dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/nine"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/number_bg_me"
                android:text="9"
                android:textSize="60dp"
                android:layout_margin="2dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/number_bg_me"
                android:text="0"
                android:textSize="60dp"
                android:layout_margin="2dp"
                android:gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/equal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/number_bg_me"
                android:text="="
                android:textSize="60dp"
                android:layout_margin="2dp"
                android:gravity="center"
                />

        </LinearLayout>


    </LinearLayout>



</androidx.appcompat.widget.LinearLayoutCompat>